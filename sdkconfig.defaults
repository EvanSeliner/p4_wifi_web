# --- ESP-Hosted SDIO Host (ESP32-P4) safe bring-up ---
CONFIG_ESP_HOSTED_SDIO_HOST_INTERFACE=y
CONFIG_ESP_HOSTED_SDIO_SLOT_1=y
CONFIG_ESP_HOSTED_SDIO_SLOT=1

# 1-bit bus on your boardâ€™s wiring
CONFIG_ESP_HOSTED_SDIO_1_BIT_BUS=y
# CONFIG_ESP_HOSTED_SDIO_4_BIT_BUS is not set

# SLOWER clock for older C6 firmware / ROM
CONFIG_ESP_HOSTED_SDIO_CLOCK_FREQ_KHZ=200

# Pin mapping (matches your logs/board)
CONFIG_ESP_HOSTED_SDIO_PIN_CLK=18
CONFIG_ESP_HOSTED_SDIO_PIN_CMD=19
CONFIG_ESP_HOSTED_SDIO_PIN_D0=14
CONFIG_ESP_HOSTED_SDIO_PRIV_PIN_D1_1BIT_BUS=15
CONFIG_ESP_HOSTED_SDIO_PIN_D1=15
CONFIG_ESP_HOSTED_SDIO_GPIO_RESET_SLAVE=54

# Try the opposite RESET polarity (older slaves often expect ACTIVE-HIGH)
CONFIG_ESP_HOSTED_SDIO_RESET_ACTIVE_HIGH=y
# CONFIG_ESP_HOSTED_SDIO_RESET_ACTIVE_LOW is not set

# Smaller queues are fine while debugging link-up
CONFIG_ESP_HOSTED_SDIO_TX_Q_SIZE=20
CONFIG_ESP_HOSTED_SDIO_RX_Q_SIZE=20

# *** CRITICAL: FORCE STREAMING OFF in both macro spellings ***
CONFIG_ESP_HOSTED_SDIO_OPTIMIZATION_RX_STREAMING_MODE=n
CONFIG_ESP_SDIO_OPTIMIZATION_RX_STREAMING_MODE=n